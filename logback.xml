<configuration>
    <springProperty scope="context" name="appName" source="spring.application.name" />
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [app:${appName}] %-5level [%X{trace_id} %X{span_id}] %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="OTEL" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <captureExperimentalAttributes>true</captureExperimentalAttributes>
        <captureMdcAttributes>*</captureMdcAttributes>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [app:${appName}] %-5level [%X{trace_id} %X{span_id}] %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="OTLP" class="io.opentelemetry.instrumentation.logback.appender.OpenTelemetryAppender">
        <!-- Nome do serviÃ§o -->
        <serviceName>fx</serviceName>
        <!-- Endpoint do Collector -->
        <endpoint>${otel.exporter.otlp.logs.endpoint}</endpoint>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="OTEL" />
        <appender-ref ref="OTLP"/>
    </root>
</configuration>